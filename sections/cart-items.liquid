<div class="page-width{% if cart == empty %} is-empty{% endif %}">
    {%- for item in cart.items -%}
        <img src="{{ item.image | img_url: '20x' }}"
             data-src="{{ item.image | img_url: '300x' }}"
             class="d-block cart-item__image lazy"
             alt="{{ item.image.alt | escape }}"
             style="width: 200px;height: 200px;"
        >
        <a class="d-block" href="{{ item.url }}">{{ item.product.title | escape }}</a>
        {%- if item.product.has_only_default_variant == false -%}
            {%- for option in item.options_with_values -%}
                <div class="cart-item__option">
                    <dt>{{ option.name }}: </dt>
                    <dd>{{ option.value }}</dd>
                </div>
            {%- endfor -%}
        {%- endif -%}
        <div class="cart-item__quantity">{{ item.quantity }}</div>
        =====
    {%- endfor -%}
</div>