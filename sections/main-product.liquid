<script>
    window.product = {};
    window.product.variants = [];
    {% for variant in product.variants %}
        window.product.variants.push({
            id: {{ variant.id }},
            title: '{{ variant.title }}',
            available: {{ variant.available }},
            price: {{ variant.price }},
            featured_image: {{ variant.featured_image.id }},
            {% if variant.compare_at_price != blank %}
                compare_at_price: {{ variant.compare_at_price }},
            {% endif %}
            option1: '{{ variant.option1 }}',
            option2: '{{ variant.option2 }}',
            option3: '{{ variant.option3 }}',
            options: [
                {% for option in variant.options -%}
                    '{{ option }}'{% unless forloop.last %},{% endunless %}
                {%- endfor %}
            ],
    })
{% endfor %}
</script>

<section data-section-id="{{ section.id }}" data-section-type="product" class="section-padding mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {%- assign current_variant = product.selected_or_first_available_variant -%}
                {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

                <div class="product-slider">
                    {% if product.images.size > 0 %}
                        {% assign index = 0 %}
                        {% for image in product.images %}
                            {% assign index = index | plus: 1 %}
                            <div data-index="{{ index }}" id="{{ image.id }}">
                                <a href="{{ image.src | img_url: '480x480' }}" data-thumbnail-id="{{ image.id }}" data-product-single-thumbnail{% if featured_image == image %} aria-current="true"{% endif %}>
                                    <img src="{{ image.src | img_url: '600x600', crop:'center' }}" alt="{{ image.alt | escape }}">
                                </a>
                            </div>
                        {% endfor %}
                    {% endif %}
                    <div class="product-slider_arrows">
                        <div class="prev_btn">
                            <svg xmlns=\"http://www.w3.org/2000/svg\" width=\"20\" height=\"20\" viewBox=\"0 0 20 20\" fill=\"none\">\n" <path d=\"M9.8 11H13C13.2833 11 13.521 10.904 13.713 10.712C13.905 10.52 14.0007 10.2827 14 10C14 9.71667 13.904 9.479 13.712 9.287C13.52 9.095 13.2827 8.99933 13 9H9.8L10.7 8.1C10.8833 7.91667 10.975 7.68333 10.975 7.4C10.975 7.11667 10.8833 6.88333 10.7 6.7C10.5167 6.51667 10.2833 6.425 10 6.425C9.71667 6.425 9.48333 6.51667 9.3 6.7L6.7 9.3C6.5 9.5 6.4 9.73333 6.4 10C6.4 10.2667 6.5 10.5 6.7 10.7L9.3 13.3C9.48333 13.4833 9.71667 13.575 10 13.575C10.2833 13.575 10.5167 13.4833 10.7 13.3C10.8833 13.1167 10.975 12.8833 10.975 12.6C10.975 12.3167 10.8833 12.0833 10.7 11.9L9.8 11ZM10 20C8.61667 20 7.31667 19.7373 6.1 19.212C4.88333 18.6867 3.825 17.9743 2.925 17.075C2.025 16.175 1.31267 15.1167 0.788 13.9C0.263333 12.6833 0.000666667 11.3833 0 10C0 8.61667 0.262667 7.31667 0.788 6.1C1.31333 4.88333 2.02567 3.825 2.925 2.925C3.825 2.025 4.88333 1.31267 6.1 0.788C7.31667 0.263333 8.61667 0.000666667 10 0C11.3833 0 12.6833 0.262667 13.9 0.788C15.1167 1.31333 16.175 2.02567 17.075 2.925C17.975 3.825 18.6877 4.88333 19.213 6.1C19.7383 7.31667 20.0007 8.61667 20 10C20 11.3833 19.7373 12.6833 19.212 13.9C18.6867 15.1167 17.9743 16.175 17.075 17.075C16.175 17.975 15.1167 18.6877 13.9 19.213C12.6833 19.7383 11.3833 20.0007 10 20Z\" fill=\"black\"/>\n" +
                            </svg>
                        </div>
                        <div class="next_btn">
                            {% include 'slick-arrow' %}
                        </div>
                    </div>
                </div>

                <div class="product-slider-nav mt-4">
                    {% if product.images.size > 1 %}
                        {% for image in product.images %}
                            <img class="px-3" width="50" src="{{ image.src | img_url: '200x200', crop:'center' }}" alt="{{ image.alt | escape }}">
                        {% endfor %}
                    {% endif %}
                </div>
            </div> <!-- / col -->

            <div class="col-md-6">
                <div class="h1 mb-2">
                    {{ product.title }}
                </div>
                {% include 'product-price' %}
                {% include 'product-form' %}

                <div class="rte product_description mt-3">
                    {% if section.settings.short_description %}
                        {{ product.description | truncate: 250 }}
                    {% else %}
                        {{ product.description }}
                    {% endif %}
                </div>
            </div> <!-- / col -->
        </div> <!-- / row -->
    </div>
</section>

{% schema %}
{
"name": "Product page",
"settings": [
    {
    "type": "checkbox",
    "id": "short_description",
    "label": "Show Product Short Description"
    }
]
}
{% endschema %}